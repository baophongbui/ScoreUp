<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF1FF"
    tools:context=".SatDetail">


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_header"                    android:backgroundTintMode="src_atop"
                    android:hapticFeedbackEnabled="false"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">



                    <TextView
                        android:id="@+id/textViewPersonalInformation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Personal Information"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <EditText
                        android:id="@+id/editTextUsername"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/montserrat"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Username"
                        android:inputType="text" />

                    <!-- Email -->
                    <EditText
                        android:id="@+id/editTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"

                        android:layout_below="@id/editTextUsername"
                        android:layout_marginTop="20dp"
                        android:hint="Email"
                        android:inputType="textEmailAddress" />

                    <!-- Reset Password Section -->
                    <TextView
                        android:id="@+id/textViewResetPassword"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/montserrat"

                        android:layout_height="wrap_content"
                        android:layout_below="@id/editTextEmail"
                        android:layout_marginTop="24dp"
                        android:text="Reset Password"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- Current Password -->
                    <EditText
                        android:id="@+id/editTextCurrentPassword"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/montserrat"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textViewResetPassword"
                        android:layout_marginTop="20dp"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:hint="Current Password"
                        android:inputType="textPassword" />

                    <!-- New Password -->
                    <EditText
                        android:id="@+id/editTextNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editTextCurrentPassword"
                        android:layout_marginTop="20dp"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:fontFamily="@font/montserrat"

                        android:hint="New Password"
                        android:inputType="textPassword" />

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="24dp"
                        android:layout_gravity="center">

                        <Button
                            android:id="@+id/buttonSave"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"

                            android:backgroundTint="#1d267d"
                            android:layout_below="@id/editTextNewPassword"
                            android:layout_toEndOf="@id/buttonCancel"
                            android:text="Save" />

                        <Button
                            android:id="@+id/buttonCancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"

                            android:backgroundTint="#808080"
                            android:layout_below="@id/editTextNewPassword"
                            android:layout_marginStart="24dp"
                            android:text="Cancel" />
                </LinearLayout>
                    <!-- Username -->

                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>





